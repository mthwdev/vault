{
	"name": "vault",
	"version": "1.0.0",
	"main": "src/main.js",
	"author": "mthwdev",
	"license": "MIT",
	"scripts": {
		"dev": "electron .",
		"build": "electron-builder"
	},
	"dependencies": {},
	"devDependencies": {
		"electron": "^34.0.2",
		"electron-builder": "^25.1.8"
	},
	"build": {
		"extraResources": [
			{
				"from": "src/loginRiot.ps1",
				"to": "loginRiot.ps1"
			}
		],
		"win": {
			"icon": "src/vaulticon.ico",
			"target": [
				"nsis"
			]
		},
		"nsis": {
			"oneClick": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": false,
			"artifactName": "vault setup.exe",
			"perMachine": true
		}
	}
}
